<section>
    <div class="content">
        <div class="column column-12 space-a">
            <h1 class="heading-a heading-major">Projects</h1>
        </div>
      
        <% blog('case_studies').articles.each do |entry| %>
          <div class="project-feature column column-4 space-c">
            <%= partial(:case_study_thumbnail, :locals => {:entry => entry }) %>
          </div>
        <% end %>

        <h1 class="heading-b space-a hide-desktop">Videos</h1>
        
        <% blog('videos').articles.each do |entry| %>
          <a href="<%= url_for(entry) %>" class="project-link column column-4 space-c">
            <%= partial(:video_thumbnail, :locals => {:entry => entry }) %>
          </a>
        <% end %>
      </div>
</section>
<section class="well space-a">
  <%= partial :testimonials %>
</section>
<section class="space-a">
  <%= partial :clients %>
</section>